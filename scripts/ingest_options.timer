[Unit]
Description=Timer for option contracts ingestion
Requires=ingest_options.service

[Timer]
# Run every 3 days at 21:00 PST (9 PM Pacific Time)
# Note: systemd uses UTC, PST is UTC-8, so 21:00 PST = 05:00 UTC next day
# Using every 3 days pattern (Monday, Thursday, Sunday pattern approximately)
OnCalendar=*-*-1,4,7,10,13,16,19,22,25,28,31 05:00:00
Persistent=true

# Also allow manual triggering
AccuracySec=1s

[Install]
WantedBy=timers.target
